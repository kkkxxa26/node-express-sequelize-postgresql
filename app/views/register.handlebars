 <!-- страница регистрации -->
  <div class="registration-container">
     <div class="form-container">
      <h2>Регистрация</h2>
      <div class="form-content">
      <form id="registerForm" novalidate>
        <div class="form-group">
          <div>
            <label for="regName">Имя</label>
            <div class="input-wrapper">
              <i class="fas fa-user"></i>
              <input type="text" id="regName" placeholder="Введите ваше имя" required />
            </div>
            <div class="error-message">Пожалуйста, введите имя</div>
          </div>
          <div>
            <label for="regSurname">Фамилия</label>
            <div class="input-wrapper">
              <i class="fas fa-user"></i>
              <input type="text" id="regSurname" placeholder="Введите фамилию" required />
            </div>
            <div class="error-message">Пожалуйста, введите фамилию</div>
          </div>
        </div>

        <div class="form-group">
          <div>
            <label for="regEmail">Email</label>
            <div class="input-wrapper">
              <i class="fas fa-envelope"></i>
              <input type="email" id="regEmail" placeholder="Введите ваш email" required />
            </div>
            <div class="error-message">Пожалуйста, введите корректный email</div>
          </div>

          <div>
            <label for="regPhone">Номер телефона</label>
          <div class="input-wrapper">
            <i class="fas fa-phone"></i>
            <input type="tel" id="regPhone" placeholder="Введите номер телефона" required />
          </div>
          <div class="error-message">Пожалуйста, введите номер телефона</div>
          </div>
        </div>

        <div class="form-group">
          <div>
            <label for="regPassword">Пароль</label>
            <div class="input-wrapper">
              <i class="fas fa-lock"></i>
              <input type="password" id="regPassword" placeholder="Введите пароль" required/>
            </div>
            <div class="error-message">Пароль должен быть не менее 6 символов</div>
          </div>
          <div>
            <label for="regPasswordCheck">Подтвердите пароль</label>
            <div class="input-wrapper">
              <i class="fas fa-lock"></i>
              <input type="password" id="regPasswordCheck" placeholder="Повторите пароль" required />
            </div>
            <div class="error-message">Пароли должны совпадать</div>
          </div>
        </div>

        <div class="button-wrapper">
          <button type="submit">Далее</button>
        </div>
        <div class="footer-text">
          Уже есть аккаунт? <a href="./login">Войти</a>
        </div>
      </div>
      </form>

               <!-- Картинка внизу -->
        <div class="bottom-image-wrapper">
          <img src="https://enactus.kg/wp-content/uploads/2022/04/kgtu-logo.png" alt="Логотип" class="bottom-image" />
        </div>

    </div>
  </div>

  <script>
    const form = document.getElementById('registerForm');
    const nameInput = document.getElementById('regName');
    const surnameInput = document.getElementById('regSurname');
    const emailInput = document.getElementById('regEmail');
    const phoneInput = document.getElementById('regPhone');
    const passwordInput = document.getElementById('regPassword');
    const passwordCheckInput = document.getElementById('regPasswordCheck');

    function isValidEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(String(email).toLowerCase());
    }

    function validateForm() {
      let isValid = true;

      if (!nameInput.value.trim()) {
        nameInput.closest('.form-group').classList.add('error');
        isValid = false;
      } else {
        nameInput.closest('.form-group').classList.remove('error');
      }

      if (!surnameInput.value.trim()) {
        surnameInput.closest('.form-group').classList.add('error');
        isValid = false;
      } else {
        surnameInput.closest('.form-group').classList.remove('error');
      }

      if (!isValidEmail(emailInput.value)) {
        emailInput.closest('.form-group').classList.add('error');
        isValid = false;
      } else {
        emailInput.closest('.form-group').classList.remove('error');
      }

      if (!phoneInput.value.trim()) {
        phoneInput.closest('.form-group').classList.add('error');
        isValid = false;
      } else {
        phoneInput.closest('.form-group').classList.remove('error');
      }

      if (passwordInput.value.length < 6) {
        passwordInput.closest('.form-group').classList.add('error');
        isValid = false;
      } else {
        passwordInput.closest('.form-group').classList.remove('error');
      }

      if (passwordInput.value !== passwordCheckInput.value) {
        passwordCheckInput.closest('.form-group').classList.add('error');
        isValid = false;
      } else {
        passwordCheckInput.closest('.form-group').classList.remove('error');
      }

      return isValid;
    }

    form.addEventListener('submit', function (e) {
      e.preventDefault();

      // Сбрасываем ошибки
      [...document.querySelectorAll('.error')].forEach(el => el.classList.remove('error'));

      // Проверяем форму
      if (!validateForm()) {
        return;
      }

      const userData = {
        name: nameInput.value,
        surname: surnameInput.value,
        email: emailInput.value,
        phone: phoneInput.value,
        password: passwordInput.value
      };

      fetch('http://localhost:3000/api/admins', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(userData)
      })
      .then(async res => {
        const data = await res.json();
        if (res.ok) {
          alert("Вы успешно зарегистрированы!");
          window.location.href = "login.html";
        } else {
          alert(data.message || "Ошибка регистрации");
        }
      })
      .catch(err => {
        console.error("Ошибка:", err);
        alert("Не удалось подключиться к серверу");
      });
    });
  </script>

